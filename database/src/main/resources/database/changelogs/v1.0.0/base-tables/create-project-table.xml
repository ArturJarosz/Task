<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-project-table">
        <createTable tableName="PROJECT">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="ARCHITECT_ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="CLIENT_ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="CLIENT_TYPE" type="VARCHAR2(30 ${char.unit})">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="PROJECT" columnNames="ID" constraintName="PK_PROJECT"/>
    </changeSet>
</databaseChangeLog>
