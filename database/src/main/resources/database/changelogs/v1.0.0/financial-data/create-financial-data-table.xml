<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-financial-data-table">
        <createTable tableName="FINANCIAL_DATA">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="${big_decimal.type}" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="HAS_INVOICE" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="PAYABLE" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="IS_PAID" type="BOOLEAN"/>
        </createTable>
        <sql dbms="postgresql">
            alter table FINANCIAL_DATA add constraint IS_PAID_NOT_NULL
            check(
            (PAYABLE) and (IS_PAID is NOT NULL)
            );
        </sql>
        <sql dbms="h2">
            alter table TASK_SCHEMA.FINANCIAL_DATA add constraint IS_PAID_NOT_NULL
            check(
            (PAYABLE) and (IS_PAID is NOT NULL)
            );
        </sql>
        <addPrimaryKey tableName="FINANCIAL_DATA" columnNames="ID" constraintName="PK_FINANCIAL_DATA"/>
    </changeSet>

</databaseChangeLog>
