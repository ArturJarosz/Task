<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-project-table">
        <createTable tableName="PROJECT">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="ARCHITECT_ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="CLIENT_ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="PROJECT_TYPE" type="VARCHAR2(30 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="SIGNING_DATE" type="DATE"/>
            <column name="START_DATE" type="DATE"/>
            <column name="END_DATE" type="DATE"/>
            <column name="DEADLINE" type="DATE"/>
            <column name="NOTE" type="VARCHAR2(1000 ${char.unit})"/>
            <column name="STATUS" type="VARCHAR2(50 ${char.unit})">
                <constraints nullable="true"/>
            </column>
            <column name="WORKFLOW_NAME" type="VARCHAR2(50 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="OFFER_VALUE" type="${big_decimal.type}" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="IS_OFFER_ACCEPTED" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="PROJECT" columnNames="ID" constraintName="PK_PROJECT"/>
    </changeSet>
</databaseChangeLog>
