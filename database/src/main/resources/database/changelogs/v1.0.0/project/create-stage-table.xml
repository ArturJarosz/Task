<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-task-table">
        <createTable tableName="STAGE">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="STAGE_TYPE" type="VARCHAR2(30 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="START_DATE" type="DATE"/>
            <column name="END_DATE" type="DATE"/>
            <column name="DEADLINE" type="DATE"/>
            <column name="STAGE_NOTE" type="VARCHAR2(1000 ${char.unit})"/>
            <column name="PROJECT_ID" type="${long.type}"/>
        </createTable>
        <addPrimaryKey tableName="STAGE" columnNames="ID" constraintName="PK_STAGE"/>
        <addForeignKeyConstraint baseTableName="STAGE" baseColumnNames="PROJECT_ID"
                                 constraintName="FK_STAGE_PROJECT"
                                 referencedTableName="PROJECT"
                                 referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>
