<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-task-table">
        <createTable tableName="TASK">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="TASK_TYPE" type="VARCHAR2(30 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <!--TODO: implement with TA-62 and TA-95-->
            <!--            <column name="STATUS" type="VARCHAR2(32 ${char.unit})">
                            <constraints nullable="false"/>
                        </column>
                        <column name="WORK_TIME" type="${long.type}" defaultValueNumeric="0">
                            <constraints nullable="false"/>
                        </column>-->
            <column name="START_DATE" type="${date.type}"/>
            <column name="END_DATE" type="${date.type}"/>
            <column name="NOTE" type="VARCHAR2(1000 ${char.unit})"/>
            <column name="STAGE_ID" type="${long.type}"/>
        </createTable>
        <addPrimaryKey tableName="TASK" columnNames="ID" constraintName="PK_TASK"/>
        <addForeignKeyConstraint baseTableName="TASK" baseColumnNames="STAGE_ID"
                                 constraintName="FK_TASK_STAGE"
                                 referencedTableName="STAGE" referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>
