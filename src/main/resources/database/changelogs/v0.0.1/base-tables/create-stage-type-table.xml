<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-stage-type-table">
        <createTable tableName="STAGE_TYPE">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="STAGE_TYPE" columnNames="ID" constraintName="PK_STAGE_TYPE"/>
    </changeSet>
</databaseChangeLog>
