<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-supplier-table">
        <createTable tableName="SUPPLIER">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE" type="VARCHAR2(32 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="NOTE" type="VARCHAR2(1000 ${char.unit})"/>
            <column name="EMAIL" type="VARCHAR2(50 ${char.unit})"/>
            <column name="TELEPHONE" type="VARCHAR2(20 ${char.unit})"/>
            <column name="JOBS_VALUE" type="${big_decimal.type}" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="SUPPLIER" columnNames="ID" constraintName="PK_SUPPLIER"/>
    </changeSet>
</databaseChangeLog>
