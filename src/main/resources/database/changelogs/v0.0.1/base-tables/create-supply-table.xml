<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-supply-table">
        <createTable tableName="SUPPLY">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="UUID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(60 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="${big_decimal.type}" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="PROJECT_ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="SUPPLY" columnNames="ID" constraintName="PK_SUPPLY"/>
        <addForeignKeyConstraint baseTableName="SUPPLY" baseColumnNames="PROJECT_ID"
                                 constraintName="FK_SUPPLY_PROJECT"
                                 referencedTableName="PROJECT" referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>
