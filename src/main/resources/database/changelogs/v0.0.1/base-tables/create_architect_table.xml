<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="liquibase" id="create-architect-table">
        <createTable tableName="ARCHITECT">
            <column name="ID" type="${long.type}">
                <constraints nullable="false"/>
            </column>
            <column name="FIRST_NAME" type="VARCHAR2(32 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR2(32 ${char.unit})">
                <constraints nullable="false"/>
            </column>
            <column name="ALL_PROJECTS_VALUE" type="${big_decimal.type}" defaultValueNumeric="0.0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="ARCHITECT" columnNames="ID" constraintName="PK_ARCHITECT"/>
    </changeSet>

</databaseChangeLog>
